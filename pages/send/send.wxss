page {
  background-color: #fff;
}

/* 动态内容输入 */

.dynamicContent {
  height: 128rpx;
  padding: 30rpx;
}

.textareaClass {
  height: 128rpx;
  font-size: 28rpx;
}

.placeholderClass {
  color: #939393;
  font-size: 28rpx;
}

/* 其他功能 */

.otherFunction {
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
}

.fun {
  width: 120rpx;
  height: 48rpx;
  line-height: 48rpx;
  border-radius: 6rpx;
  background-color: #d61800;
  text-align: center;
  color: #fff;
  font-size: 30rpx;
  margin-right: 50rpx;
}

/* 照片 */

.photoList {
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.addPhoto {
  width: 200rpx;
  height: 200rpx;
  background-color: #f2f2f2;
  margin-top: 10rpx;
  margin-right: 10rpx;
  position: relative;
}

.photoImg {
  width: 200rpx;
  height: 200rpx;
}

.delPhoto {
  width: 26rpx;
  height: 26rpx;
  position: absolute;
  bottom: 0;
  right: 0;
}

.addPhotoImg {
  width: 80rpx;
  height: 80rpx;
  margin-left: 60rpx;
  margin-top: 60rpx;
}

/* 位置 */

.location {
  height: 40rpx;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 44rpx;
}

.locationImg {
  width: 23rpx;
  height: 28rpx;
  background-color: #f3f3f3;
  margin-right: 10rpx;
}

.locationText {
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  padding: 0 22rpx 0 10rpx;
  font-size: 22rpx;
  color: #6e6d6d;
  background-color: #f3f3f3;
}

.delLocationView {
  height: 40rpx;
  background-color: #f3f3f3;
  padding-right: 22rpx;
}

.delLocationImg {
  width: 16rpx;
  height: 16rpx;
}

/* 可见得人 */

.radioGreen {
  padding: 0 30rpx;
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #000;
}

.radioGreen .radioTop {
  display: flex;
  align-items: center;
}

.radioGreen .radioTop radio {
  transform: scale(0.8);
}

.radioGreen .radioBottom {
  color: #939393;
  display: flex;
  align-items: center;
}

.radioGreen .radioBottom image {
  width: 16rpx;
  height: 26rpx;
  margin-left: 15rpx;
  margin-top: 5rpx;
}

/* 发布按钮 */

.send {
  margin-top: 98rpx;
}

.sendBtn {
  width: 540rpx;
  height: 80rpx;
  background-color: #d61800;
  border-radius: 10rpx;
  line-height: 80rpx;
  font-size: 38rpx;
  color: #fff;
  font-weight: bold;
}

.topicView {
  width: 690rpx;
  height: 600rpx;
  padding: 40rpx 30rpx;
  background-color: #fff;
  position: absolute;
  top: 240rpx;
}

.topic {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 56rpx;
}

.topicName {
  font-size: 24rpx;
}

.topicHot {
  font-size: 20rpx;
}

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background: rgba(0, 0, 0, 0.1);
  z-index: 5;
}

.mask_two {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  background: rgba(0, 0, 0, 0.1);
}

.share_top {
  width: 666rpx;
  height: 235rpx;
  position: absolute;
  background: #fff;
  left: 50%;
  transform: translateX(-50%);
  bottom: 65px;
  border-radius: 10rpx;
}

.share_bottom {
  width: 666rpx;
  height: 101rpx;
  position: absolute;
  background: #fff;
  border: 10rpx;
  line-height: 101rpx;
  text-align: center;
  bottom: 5px;
  left: 50%;
  border-radius: 10rpx;
  transform: translateX(-50%);
}

.share_top_one {
  height: 115rpx;
  width: 584rpx;
  text-align: center;
  line-height: 115rpx;
  position: relative;
  border-bottom: 1rpx solid #e5e5e6;
  margin: 0 auto;
  padding: 0rpx;
  font-size: 28rpx;
  background: #fff;
}

.share_top_one::after {
  border: none;
}

.share_top_two {
  height: 115rpx;
  width: 584rpx;
  text-align: center;
  line-height: 115rpx;
  position: relative;
  margin: 0 auto;
}
