page {
  background: #fff;
}

.titleLayout {
  width: 655rpx;
  margin: 30rpx auto 0;
  display: flex;
}

.imageLayout {
  position: relative;
  height: 90rpx;
}

.imageLayout>image {
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
}

.imageLayout .absoluteImg image {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  bottom: -15rpx;
  left: 30rpx;
}

.contentLayout {
  display: flex;
  flex-direction: column;
  color: #939393;
  margin-left: 15rpx;
  position: relative;
}

.contentLayout .nickName {
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
  margin-top: 15rpx;
  display: flex;
  align-items: center;
}

.contentLayout .category {
  font-size: 20rpx;
  color: #d61800;
  border: 1px solid;
  border-radius: 8rpx;
  padding: 0 5rpx;
  margin-left: 10rpx;
  font-weight: bold;
}

.contentLayout .time {
  font-size: 20rpx;
}

.contentLayout .guanZhu {
  position: absolute;
  right: 0;
  top: 20rpx;
  width: 140rpx;
  height: 50rpx;
}

.contentLayout .character {
  font-size: 28rpx;
  line-height: 40rpx;
  margin-top: 18rpx;
}

.contentLayout .imgList {
  margin-top: 25rpx;
}

.contentLayout .imgList image {
  width: 177rpx;
  height: 177rpx;
  margin-right: 10rpx;
}

.contentLayout .imgList image:nth-child(3n) {
  margin-right: 0;
}

.contentLayout .address {
  font-size: 20rpx;
  margin-top: 25rpx;
}

.contentLayout .address image {
  width: 19rpx;
  height: 24rpx;
  display: inline-block;
  margin-right: 10rpx;
}

.contentLayout .classifyTwo {
  margin: 20rpx 0 0;
  display: flex;
  flex-wrap:wrap;
}

.contentLayout .classifyTwo text {
  padding: 5rpx 15rpx;
  background-color: #d61800;
  font-size: 20rpx;
  color: #fff;
  margin-left: 10rpx;
  display: block;
  margin-bottom:5rpx;
}

.contentLayout .classifyTwo text:first-child {
  margin-left: 0;
}

.contentLayout .circle {
  width: 550rpx;
  height: 96rpx;
  overflow: hidden;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #eee;
  margin-top: 30rpx;
}

.contentLayout .circle .leftImg {
  width: 96rpx;
  display: block;
  height: 100px;
}

.contentLayout .circle .text {
  flex: 1;
  margin-left: 10rpx;
}

.contentLayout .circle .text view {
  font-size: 24rpx;
  color: #000;
}

.contentLayout .circle .text text {
  font-size: 20rpx;
}

.contentLayout .circle .rightImg {
  width: 16rpx;
  height: 26rpx;
  margin-right: 15rpx;
}

.moreBtn {
  text-align: center;
  font-size: 20rpx;
  color: #939393;
  margin-top: 20rpx;
}

/* 评论内容 */

.commentContent {
  background-color: #fff;
  margin-top: 80rpx;
}

.commentContent .commentContentView:last-child {
  border: 0;
}

.commentTitle {
  height: 50rpx;
  padding-left: 24rpx;
  font-size: 30rpx;
  line-height: 78rpx;
  color: #2b2b2b;
  font-weight: bold;
}

.commentLine {
  width: 100%;
  height: 16rpx;
}

.commentContentView {
  width: 668rpx;
  padding: 14rpx 16rpx 30rpx;
  margin: 0 auto;
  border-bottom: 2rpx solid #e5e5e5;
}

.commentUserInfo {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.userHead {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
  border-radius: 50%;
}

.userInfo {
  display:flex;
  justify-content:space-between;
  width: 100%;
}
.commentContentView:last-child{ 
  margin-bottom:100rpx;
}

.userName {
  font-size: 24rpx;
  font-weight: bold;
}

.commentDate {
  font-size: 20rpx;
  color: #939393;
  margin-top: 6rpx;
}

/* 评论 */

.comment {
  font-size: 24rpx;
  color: #2b2b2b;
  margin-top: 18rpx;
  margin-left: 70rpx;
}

/* 回复 */

.reply {
  font-size: 20rpx;
  color: #2b2b2b;
  margin-top: 20rpx;
  margin-left: 70rpx;
  padding: 20rpx 10rpx;
  background-color: #f3f3f3;
}

.replyView {
  margin-top: 6rpx;
}

.name {
  color: #000;
  font-weight: bold;
}

/* 评论输入框 */

.inputView {
  width: 100%;
  height: 92rpx;
  border-top: 1rpx solid #e5e5e5;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  color: #2b2b2b;
}

.sendInput {
  flex: 1;
  height: 68rpx;
  margin: 12rpx 20rpx;
  padding: 0 22rpx;
  background-color: #f3f3f3;
  font-size: 26rpx;
  border-radius: 34rpx;
}

.placeholderClass {
  font-size: 26rpx;
  color: #6e6d6d;
}

.sendView {
  display: flex;
  flex-direction: column;
  padding: 0;
  margin-left: -5rpx;
  background-color: transparent;
}

.sendView::after {
  border: 0;
}

.sendImg {
  width: 38rpx;
  height: 38rpx;
}

.sendText {
  width: 150rpx;
  font-size: 36rpx;
  text-align: center;
}

.opration {
  width: 270rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 20rpx;
}

.opration .oprationItem {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.opration .oprationItem image {
  width: 40rpx;
  height: 38rpx;
}

.opration .oprationItem text {
  margin-top: 10rpx;
}

/* 分享 */

.mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0px;
  left: 0px;
  bottom: 0;
  right: 0;
  background: rgba(0, 0, 0, 0.4);
  z-index: 100;
}

.shareMask {
  width: 100%;
  height: 256rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
}

@keyframes showShare {
  0% {
    bottom: -256rpx;
  }

  50% {
    bottom: 0;
  }
}

.shareMask.active {
  animation: 1s showShare;
}

.shareHead {
  text-align: center;
  font-size: 24rpx;
  margin: 15rpx 0;
  color: #939393;
}

.shareContent {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-top: 50rpx;
}

.shareOption {
  width: 160rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}


.shareIcon {
  width: 80rpx;
  height: 80rpx;
  margin: 0 auto;
}


.shareViewText {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 24rpx;
  margin: 10rpx 0;
  color: #939393;
  text-align: center;
}

.shareBtn {
  width: 160rpx;
  height: 160rpx;
  padding: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.shareBtn::after {
  border: 0;
}

button[plain] {
  border: 0;
}

.sendTextTwo{
  width:150rpx;
  font-size:36rpx;
  text-align:center;
  padding-top:20rpx;
}

.pixed_inptwo{
position:fixed;
left:0.5px;
bottom:0rpx;
z-index:999;
background:#ffff;
width:100%;
}
