/* 顶部要固定定位   标题要居中   自定义按钮和标题要和右边微信原生的胶囊上下对齐 */

page {
  background: #fff;
}

.thirdIndex {
  position: relative;
}

.thirdIndex .bgImg {
  width: 100%;
  height: 690rpx;
}

.thirdIndex .bgImgTwo {
  width: 100%;
  height: 332rpx;
  position: absolute;
  bottom: 0;
  left: 0;
}

.nav-wrap {
  position: fixed;
  width: 100%;
  top: 0;
  color: #000;
  z-index: 999;
  background: #d6ddde;
}

/* 标题要居中 */

.nav-title {
  position: absolute;
  text-align: center;
  max-width: 400rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto;
  font-size: 28rpx;
}

.nav-capsule {
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  width: 132rpx;
  padding: 0 20rpx;
  border-radius: 30rpx;
  justify-content: space-between;
  height: 60rpx;
  border: solid 1rpx #e5e5e5;
  background: #fff;
  position: absolute;
  bottom: 4rpx;
}

.navbar-v-line {
  width: 1px;
  height: 32rpx;
  background-color: #e5e5e5;
}

.back-pre {
  width: 20rpx;
  height: 35rpx;
  margin-top: 4rpx;
}

.back-home {
  width: 39rpx;
  height: 34rpx;
  margin-top: 4rpx;
}

/* 第三方主页 */

.thirdLayout {
  position: absolute;
  width: 100%;
  top: 0;
  left: 0;
}

.thirdLayout .userImgLayout {
  width: 200rpx;
  height: 200rpx;
  padding: 5rpx;
  background: #fff;
  border-radius: 50%;
  margin: 240rpx auto 0;
}

.thirdLayout .userImgLayout image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background: #fff;
}

.thirdLayout .rightImgLayout {
  position: absolute;
  right: 0;
  top: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 146rpx;
  height: 60rpx;
  border-top-left-radius: 30rpx;
  border-bottom-left-radius: 30rpx;
  background: rgba(0, 0, 0, 0.3);
}

.thirdLayout .rightImgLayout .leftText {
  color: #fff;
  font-size: 22rpx;
}

.thirdLayout .rightImgLayout .postionImg {
  width: 40rpx;
  height: 35rpx;
  margin-left: 10rpx;
}

.thirdLayout .userText {
  text-align: center;
  position: relative;
  margin-top: 10rpx;
}

.thirdLayout .userText text {
  font-size: 36rpx;
  font-weight: bold;
  color: #000;
}

.thirdLayout .userText image {
  width: 34rpx;
  height: 35rpx;
  position: absolute;
  margin-left: 20rpx;
  margin-top: 8rpx;
}

.thirdLayout .labelText {
  font-size: 28rpx;
  color: #2b2b2b;
  text-align: center;
  margin-top: 20rpx;
}

.thirdLayout .userBottom {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.thirdLayout .userBottom .usBottomItem {
  flex: 1;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
  align-items: center;
  color: #000;
}

.thirdLayout .userBottom .usBottomItem:not(:first-child) {
  border-left: dashed 2rpx #666;
}

.thirdLayout .userBottom .usBottomItem text {
  font-size: 50rpx;
}

.thirdLayout .userBottom .usBottomItem view {
  font-size: 28rpx;
}

/* 暂无动态 */

.noDynamic {
  margin-top: 70rpx;
}

.noDynamic image {
  width: 100%;
  height: 543rpx;
  display: block;
}

/* 动态 */

.noDynamic .dynamicLayout {
  width: 690rpx;
  margin: 0 auto;
}

.noDynamic .dynamicItem {
  margin-bottom: 30rpx;
  position: relative;
}

.noDynamic .itemTop {
  position: relative;
  display: flex;
  align-items: center;
}

.noDynamic .itemTop image {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
}

.noDynamic .itemTop text {
  font-size: 40rpx;
}

.noDynamic .itemTop .positionText {
  position: absolute;
  width: 100%;
  line-height: 60rpx;
  top: 0;
  font-size: 24rpx;
  text-align: center;
}

.noDynamic .itemBottom {
  width: 590rpx;
  margin-top: 10rpx;
  padding: 35rpx;
  box-shadow: 1rpx 1rpx 20rpx #ccc;
  margin-left: 30rpx;
  border-radius: 30rpx;
  border-top-left-radius: 0;
  border-bottom-right-radius: 0;
}

.noDynamic .itemBottom .contentText {
  font-size: 28rpx;
  color: #2b2b2b;
  font-weight: bold;
  line-height: 40rpx;
}

.noDynamic .itemBottom .contentImg {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.noDynamic .itemBottom .contentImg image {
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
}

/* 私聊和赠礼 */

.privateGift {
  position: fixed;
  width: 100%;
  height: 100rpx;
  background: #fff;
  left: 0;
  bottom: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 -5rpx 10rpx #efefef;
}

.privateGift image {
  width: 117rpx;
  height: 38rpx;
}

.privateGift .privateLine {
  width: 2rpx;
  height: 40rpx;
  background: #efefef;
  margin: 0 125rpx;
}

/* 礼物弹框 */

.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, 0.2);
}

.giftList {
  height: 520rpx;
  background: #fff;
  position: fixed;
  left: 0;
  bottom: -520rpx;
  transition: bottom 0.5s;
  z-index: 999;
  padding: 0 15rpx;
  box-shadow: 0 1rpx 10rpx #ccc;
}

.giftList.active {
  bottom: 0;
}

.giftList .scrollView {
  width: 100%;
  height: 400rpx;
  padding: 20rpx 0;
}

.giftList .scrollView .giftTop {
  display: flex;
  flex-wrap: wrap;
}

.giftList .scrollView .giftItem {
  width: 20%;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  border: solid transparent 4rpx;
  border-radius: 20rpx;
}

.giftList .scrollView .giftItem.active {
  border-color: #d61800;
}

.giftList .scrollView .giftItem .giftImgLayout {
  width: 100%;
  height: 118rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.giftList .scrollView .giftItem .giftImgLayout image {
  width: 100%;
  height: 100%;
}

.giftList .scrollView .giftItem .giftName {
  font-size: 28rpx;
  color: #6d6d6d;
}

.giftList .scrollView .giftItem .giftMoney {
  font-size: 20rpx;
  color: #b6b6b6;
}

.giftList .giftBottom {
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #000;
  font-size: 26rpx;
  border-top: dashed 2rpx #666;
}

.giftList .giftBottom image {
  width: 27rpx;
  height: 28rpx;
  margin-right: 10rpx;
}

.giftList .giftBottom .present {
  font-size: 28rpx;
  width: 110rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #939393;
  color: #fff;
  text-align: center;
  border-radius: 25rpx;
}

.giftList .giftBottom .givePresent {
  text-align: center;
  position: relative;
  display: flex;
  border: solid 1rpx #d61800;
  box-sizing: border-box;
  border-radius: 25rpx;
}

.giftList .giftBottom .numberList {
  position: absolute;
  left: -100rpx;
  bottom: 80rpx;
  width: 250rpx;
  height: 380rpx;
  background: rgba(255, 255, 255, .8);
  z-index: 999;
  padding: 20rpx;
  text-align: left;
  border-radius: 20rpx;
  box-shadow: 0 0 5rpx #ccc;
}

.giftList .giftBottom .numberList .customNumber {
  width: 180rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 25rpx;
  background: #a9a9a9;
  color: #000;
  text-align: center;
  margin-left: 35rpx;
}
.giftList .giftBottom .numberList .smallScroll {
  height: 320rpx;
}
.giftList .giftBottom .numberList .smallScroll .numberItem{
  display: flex;
  line-height: 60rpx;
}
.giftList .giftBottom .numberList .smallScroll .numberItem text:first-child{width: 80rpx;}
.giftList .giftBottom .givePresent .presentLeft {
  width: 110rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #000;
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
}

.giftList .giftBottom .givePresent .presentLeft image {
  width: 25rpx;
  height: 16rpx;
  margin-left: 10rpx;
  transition: rotate 0.5s;
}

.giftList .giftBottom .givePresent .presentLeft image.active {
  transform: rotate(180deg);
}

.giftList .giftBottom .givePresent .presentRight {
  width: 110rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #d61800;
  font-size: 28rpx;
  color: #fff;
  border-top-right-radius: 25rpx;
  border-bottom-right-radius: 25rpx;
}
