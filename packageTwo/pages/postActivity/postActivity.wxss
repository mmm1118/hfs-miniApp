.postActivity {
  width: 700rpx;
  margin: 0 auto;
}

input {
  flex: 1;
  padding: 0 20rpx;
}

.dingWeiImg {
  width: 18rpx;
  height: 22rpx;
}

.inputItem {
  display: flex;
  align-items: center;
  color: #000;
  font-size: 24rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  background: #fff;
  margin-top: 20rpx;
}

.titleText {
  display: flex;
  margin-right: 50rpx;
  font-size: 34rpx;
  color: #000;
  font-weight: bold;
}

.inputItem .addImg {
  width: 160rpx;
  height: 116rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: solid 1rpx #ccc;
  margin-right: 20rpx;
}

.inputItem .addImg image {
  width: 60rpx;
  height: 60rpx;
}

/* 活动时间 */

.inputItemTwo {
  display: flex;
  flex-wrap: wrap;
  color: #000;
  font-size: 24rpx;
  padding: 30rpx;
  border-radius: 20rpx;
  background: #fff;
  margin-top: 20rpx;
}

.timeList {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.timeList>view {
  display: flex;
  align-items: center;
}

.timeList>view:not(:first-child) {
  margin-top: 30rpx;
}

.timeList>view text {
  margin-right: 20rpx;
  color: #000;
  font-size: 26rpx;
}

/* 移动区域 */

.movableArea {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.movableArea movable-area {
  width: 100%;
  height: 2000rpx;
}

/* 右侧弹出框 */

.rightImg {
  position: fixed;
  right: 0;
  bottom: 440rpx;
  z-index: 99;
  width: 109rpx;
  height: 100rpx;
  transition: right 0.5s;
}

.rightImg.active {
  right: -110rpx;
}

.diaLog {
  position: fixed;
  width: 570rpx;
  height: 300rpx;
  z-index: 999;
  right: -570rpx;
  bottom: 340rpx;
  transition: right 0.5s;
  display: flex;
  align-items: center;
  background: rgba(0, 0, 0, 0.6);
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
}

.diaLog.active {
  right: 0;
}

.diaLog .diaLogLeftImg {
  width: 60rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.diaLog .diaLogLeftImg image {
  width: 15rpx;
  height: 26rpx;
}

.diaLog .diaLogRight {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  height: 300rpx;
}

.diaLog .diaLogRight .diaLogRightItem {
  width: 33%;
  height: 50%;
  font-size: 22rpx;
  color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.diaLog .diaLogRight .diaLogRightItem image {
  width: 50rpx;
  height: 50rpx;
}
