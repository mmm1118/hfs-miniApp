    <image src='/images/memorial/iconRight.png'></image>
  </view>

  <view class='diaLogRight'>
    <view class='diaLogRightItem' catchtap='clickItem' data-comName='image'>
      <image src='/images/memorial/images.png'></image>
      <text>图片</text>
    </view>
    <view class='diaLogRightItem' catchtap='clickItem' data-comName='text'>
      <image src='/images/memorial/text.png'></image>
      <text>文字</text>
    </view>
    <view class='diaLogRightItem' catchtap='clickItem' data-comName='video'>
      <image src='/images/memorial/video.png'></image>
      <text>视频</text>
    </view>
    <view class='diaLogRightItem' catchtap='clickItem' data-comName='vote'>
      <image src='/images/memorial/vote.png'></image>
      <text>投票</text>
    </view>
    <view class='diaLogRightItem' catchtap='clickItem' data-comName='file'>
      <image src='/images/memorial/file.png'></image>
      <text>导入文件</text>
    </view>
    <view class='diaLogRightItem' catchtap='clickItem' data-comName='record'>
      <image src='/images/memorial/record.png'></image>
      <text>录音</text>
    </view>
  </view>
</view>